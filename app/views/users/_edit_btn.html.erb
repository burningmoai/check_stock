<div class="position-relative">
<%= link_to "#user_edit-item-#{user.id}", class:"btn btn-sm btn-outline-secondary", "data-toggle": "collapse", role: "button", "aria-expanded": "false", "area-controls": "user_edit-item-#{user.id}", style: "z-index:1;" do %>
  <i class="fas fa-edit"></i>
<% end %>
<div class="collapse position-absolute" id="user_edit-item-<%= user.id %>" style="z-index:2;">
    <div class="card card-body">
      <%= form_with(model: user, local: true) do |f| %>
      <div class="form-row align-items-baseline" style="justify-content:space-between;">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true %>
      </div>
      <div class="form-row align-items-baseline">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true %>
      </div>
      <div class="form-row justify-content-center align-items-baseline">
        <%= f.submit '更新する',class:"btn btn-sm btn-orange mt-1" %>
      </div>
      <% end %>
    </div>
  </div>
</div>