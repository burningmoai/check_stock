<div class="container pb-5">
  <div class="alert">
    <% if @category %>
      <%= @category.errors.count %>件のエラーが発生しました
      <ul>
        <% @category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="row mt-3">
    <h3 class="col-8"><%= @user.name %>さんのユーザー情報編集</h3>
    <div class="col-4">
      <%= link_to "戻る",user_path(@user.id), class:"btn btn-sm btn-outline-secondary" %>
    </div>
  </div>
  <div class="row mt-3">
    <table class="mt-3">
    <%= form_with model: @user do |f| %>
      <tr>
        <th class="col-6">ユーザー名</th>
        <td class="col-6"><%= f.text_field :name, autofocus: true, placeholder:"お名前" %></td>
      </tr>
      <tr>
        <th class="col-6">Eメール</th>
        <td class="col-6"><%= f.email_field :email, autofocus: true, placeholder:"Eメール" %></td>
      </tr>
    </table>
  </div>
  <div class="mt-3 pb-5">
      <%= f.submit "変更を保存",class:"btn btn-sm btn-outline-secondary" %>
    <% end %>
    </div>
</div>
