<div class="container pb-5">
  <div class="alert">
    <% if @category %>
      <%= @category.errors.count %>件のエラーが発生しました
      <ul>
        <% @category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="row mt-3">
    <h3 class="col-8"><%= @user.name %>さんのユーザー情報</h3>
    <div class="col-4">
      <% if @user.name != "guestuser" %>
      <%= render "edit_btn", user: @user %>
      <% end %>
    </div>
  </div>
  <div class="row mt-3">
    <table class="col-12 mt-3">
      <tr>
        <th style="width:30%;">お名前</th>
        <td style="width:70%;"><%= @user.name %></td>
      </tr>
      <tr>
        <th style="width:30%;">メールアドレス</th>
        <td style="width:70%;"><%= @user.email %></td>
      </tr>
    </table>
  </div>
</div>