<div class="container pb-5">
  <div class="row mt-3">
    <h3 class="col-8"><%= @user.name %>さんのユーザー情報</h3>
    <div class="col-4">
      <% if @user.name != "guestuser" %>
      <%= link_to "編集する",edit_user_path(@user.id), class:"btn btn-sm btn-outline-secondary" %>
      <% end %>
    </div>
  </div>
  <div class="row mt-3">
    <table class="mt-3">
      <tr>
        <th class="col-6">ユーザー名</th>
        <td class="col-6"><%= @user.name %></td>
      </tr>
      <tr>
        <th class="col-6">Eメール</th>
        <td class="col-6"><%= @user.email %></td>
      </tr>
    </table>
  </div>
</div>