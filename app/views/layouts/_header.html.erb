<header>
  <nav class="navbar navbar-expand-lg navbar-light sticky-top" style="background-color:#EAF2AE;">
    <div class="container">
      <a class="navbar-brand" href="/" style="width:40%">
        <%= image_tag 'CheckStock_logo.png', width: '40%', height: '40%' %>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">

        <% if user_signed_in? %><!--会員-->
        <p class="ml-1 font-orange" style="text-left">おつかれさま、<br><%= current_user.name %>さん!</p>

          <ul class="navbar-nav ml-auto">
            <li>
              <%= link_to user_path(current_user),class: 'nav-link text-nowrap text-light' do %>
                <p class="font-orange"><i class="fas fa-info-circle"></i> マイページ</p>
              <% end %>
            </li>
            <li>
              <%=  link_to foods_path,class: 'nav-link text-nowrap text-light' do %>
                <p class="font-orange"><i class="fas fa-carrot"></i> 食材一覧</p>
              <% end %>
            </li>
            <li>
              <%=  link_to stocks_path ,class: 'nav-link text-nowrap text-light' do %>
                <p class="font-orange"><i class="fas fa-cubes"></i> <%= current_user.name %>家のストック</p>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete,class: 'nav-link text-nowrap text-light' do %>
                <p class="font-orange"><i class="fas fa-sign-out-alt"></i> ログアウト</p>
              <% end %>
            </li>
          </ul>
        <% else %><!--見るだけの人-->
          <ul class="navbar-nav ml-auto">
            <li>
              <%= link_to new_user_registration_path,class: 'nav-link text-nowrap text-light' do %>
                <p class="font-orange"><i class="fas fa-user-plus"></i> 新規登録</p>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_session_path ,class: 'nav-link text-nowrap text-light' do %>
                <p class="font-orange"><i class="fas fa-sign-in-alt"></i>ログイン</p>
              <% end %>
            </li>
            <li>
              <%= link_to users_guest_sign_in_path,class: 'nav-link text-nowrap text-light',method: :post do %>
                <p class="font-orange"><i class="fas fa-eye"></i>ゲストログイン</p>
              <% end %>
            </li>
          </ul>
        <% end %>

      </div>
    </div>
  </nav>
</header>