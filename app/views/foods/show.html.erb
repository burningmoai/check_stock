<div class="container pb-5">
  <div class="row">
    <h3 class="col-4">食材の詳細</h3>
    <span class="col-3 offset-2"><%= link_to "編集する",edit_food_path(@food.id) %></span>
    <span class="col-3"><%= link_to "一覧へ戻る",foods_path %></span>
  </div>
  <table class="mt-3">
    <tr>
      <th class="col-1">食材名</th>
      <td class="col-3"><%= @food.name %></td>

    </tr>
    <tr>
      <th class="col-1">カテゴリ</th>
      <td class="col-3"><%= @food.category.name %></td>
    </tr>
  </table>
</div>
