<div class="container pb-5">
  <div class="row">
    <div class="col-6 mt-3">
      <h3>カテゴリ一覧・追加</h3>
        <div>
          <h4>カテゴリの追加</h4>
          <%= form_with model: @category, url: categories_path, local:true do |f| %>
            <%= f.text_field :name, autocomplete: "name",placeholder: 'カテゴリ名を入力' %>
            <%= f.submit "カテゴリを登録",class:"btn btn-sm btn-outline-secondary" %>
          <% end %>
        </div>
        <div>
          <h4>食材一覧</h4>
          <% @categories.each do |category| %>
            <table>
              <tbody>
                <tr>
                  <td><%= category.name %></td>
                  <td><%= link_to "削除", category_path(category.id),method: :delete, class:"btn btn-sm btn-outline-secondary"%></td>
                </tr>
              </tbody>
            </table>
          <% end %>
        </div>

    </div>
  </div>
</div>